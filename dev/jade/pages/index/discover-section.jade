mixin discover-section
	- var $ = attributes

	section.discover-section
		header= $.title
		
		block
		
		
mixin discover
	- var $ = attributes

	.discover(class='discover-#{$.type}')
		block
				
				
mixin showcase
	- var $ = attributes
	
	article.showcase
		if $.badge
			.showcase-header
				+author(user= $.user)
				.badge(class="badge-#{$.badge}")
		else
			+author(user= $.user)
			
		.showcase-content
			block